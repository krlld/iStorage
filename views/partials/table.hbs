<div class="row g-4">
    {{#each inventory}}
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div style="height: 160px">
                    <img
                        src="{{src}}"
                        class="card-img-top img-thumbnail p-2"
                        style="width: 100%; height: 100%; object-fit: contain;"
                    />
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{CatalogName}}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Категория: {{CategoryName}}</li>
                    <li class="list-group-item">Описание: {{description}}</li>
                    <li class="list-group-item">Цена: {{price}} BYN</li>
                    <li class="list-group-item">Количество:
                        <span id="count{{catalogId}}">{{sum}}</span></li>
                    <li class="list-group-item">
                        <form method="post" class="m-0" name="form">
                            <div class="input-group">
                                <button
                                    class="btn btn-outline-secondary"
                                    type="submit"
                                    formaction="/inventory/minus"
                                >-</button>
                                <input
                                    type="number"
                                    min="0"
                                    maxlength="9"
                                    class="form-control"
                                    name="count"
                                    id="input{{catalogId}}"
                                    required
                                />
                                <input type="hidden" name="id" value="{{catalogId}}" />
                                <button
                                    class="btn btn-outline-secondary"
                                    type="submit"
                                    formaction="/inventory/plus"
                                >+</button>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    {{/each}}
</div>

<script src="/table.js"></script>